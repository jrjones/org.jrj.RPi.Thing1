        <Button x:Name="ButtonLEDBlue" Content="Blue LED" HorizontalAlignment="Left" Margin="1187,237,0,0" VerticalAlignment="Top" Foreground="White" Background="#33001FFF" BorderBrush="White" Height="140" Width="315" Click="ButtonLEDBlue_Click"/>
